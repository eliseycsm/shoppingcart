<form action="/" method="POST">
    <div class="form-group">
        <label for="item">Item</label>
        <input type="text" class="form-control" name="item" id="item" placeholder="Please enter an item name"> 
    </div>
    <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="number" class="form-control" name="quantity" id="quantity" 
        placeholder="Please enter an number" min="1"> 
    </div>
    <div class="form-group">
        <label for="unitPrice">Unit Price</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input type="number" class="form-control" name="unitPrice" id="unitPrice" 
            placeholder="Cost per unit item" min="1"> 
        </div>
    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary btn-lg">Add to Cart</button>
    </div>
    <input type="hidden" name="cartState" value={{ cartState }}>
</form>

<table class="table mt-3">
    <thead class="thead-dark">
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Unit Price</th>
        </tr>
    </thead>
    <tbody>
        {{#each cart}}
        <tr>
            
                <td>{{ this.item }}</td>
                <td>{{ this.quantity }}</td>
                <td>{{ this.unitPrice }}</td>
            
        </tr>
        {{/each}}
    </tbody>


</table>